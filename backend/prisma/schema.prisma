generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Movie {
  id       Int    @id @default(autoincrement())
  title    String
  director String
  summary  String @db.VarChar(100)

  genres GenreMovie[]

  @@map("movies")
}

model Genre {
  id   Int    @id @default(autoincrement())
  name String

  movies GenreMovie[]

  @@map("genres")
}

model GenreMovie {
  genreId Int
  movieId Int

  genre Genre @relation(fields: [genreId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])

  @@id([genreId, movieId])
  @@map("genre_movie")
}
